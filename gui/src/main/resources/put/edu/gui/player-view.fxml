<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="put.edu.gui.controllers.PlayerSceneController">
    <bottom>
        <GridPane fx:id="joinGameGridPane" hgap="5.0" vgap="5.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="30.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" percentWidth="40.0"/>
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="30.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="15.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <TextField fx:id="gameCodeTextField" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets/>
                </GridPane.margin>
            </TextField>
            <TextField fx:id="usernameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets/>
                </GridPane.margin>
            </TextField>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="game number" GridPane.halignment="CENTER"
                  GridPane.valignment="CENTER"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="username" textAlignment="CENTER" GridPane.columnIndex="1"
                  GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
            <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                    onAction="#joinGame" text="JOIN GAME" GridPane.columnIndex="2" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets/>
                </GridPane.margin>
            </Button>
            <padding>
                <Insets top="5.0"/>
            </padding>
        </GridPane>
    </bottom>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <top>
        <VBox alignment="TOP_CENTER" prefHeight="45.0" prefWidth="390.0" BorderPane.alignment="CENTER">
            <children>
                <Button alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                        mnemonicParsing="false" onAction="#exit" text="Exit"/>
                <Text fx:id="infoText" strokeType="OUTSIDE" strokeWidth="0.0" text="not in game"
                      textAlignment="CENTER"/>
            </children>
        </VBox>
    </top>
    <center>
        <GridPane fx:id="optionsGridPane" alignment="CENTER" hgap="10.0" maxHeight="1.7976931348623157E308"
                  maxWidth="1.7976931348623157E308" vgap="10.0" visible="false" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Button fx:id="A" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
                    maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#sendAnswer" text="A">
                <GridPane.margin>
                    <Insets/>
                </GridPane.margin>
                <font>
                    <Font size="24.0"/>
                </font>
            </Button>
            <Button fx:id="B" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
                    maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#sendAnswer" text="B"
                    GridPane.columnIndex="1">
                <GridPane.margin>
                    <Insets/>
                </GridPane.margin>
                <font>
                    <Font size="24.0"/>
                </font>
            </Button>
            <Button fx:id="C" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
                    maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#sendAnswer" text="C"
                    GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets/>
                </GridPane.margin>
                <font>
                    <Font size="24.0"/>
                </font>
            </Button>
            <Button fx:id="D" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
                    maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#sendAnswer" text="D"
                    GridPane.columnIndex="1" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets/>
                </GridPane.margin>
                <font>
                    <Font size="24.0"/>
                </font>
            </Button>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </GridPane>
    </center>
</BorderPane>
